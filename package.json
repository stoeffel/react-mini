{
  "name": "react-mini",
  "version": "1.0.1",
  "description": "Minimalistic react components",
  "license": "MIT",
  "repository": "stoeffel/react-mini",
  "author": {
    "name": "Christoph Hermann",
    "email": "schtoeffel@gmail.com",
    "url": "schtoeffel.ch"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "develop": "nodangel --ignore node_modules --watch __tests__ --watch index.js --exec 'npm run test'",
    "test": "BABEL_JEST_STAGE=0 jest",
    "patch-release": "npm version patch && npm publish && git push --follow-tags",
    "minor-release": "npm version minor && npm publish && git push --follow-tags",
    "major-release": "npm version major && npm publish && git push --follow-tags"
  },
  "files": [
    "index.js",
    "pure.js"
  ],
  "keywords": [
    "react",
    "minimalistic"
  ],
  "dependencies": {
    "react-purerender": "^0.1.0"
  },
  "devDependencies": {
    "babel-jest": "^5.3.0",
    "jest-cli": "^0.5.1",
    "nodangel": "^1.3.8",
    "react": "^0.14.0",
    "react-addons-test-utils": "^0.14.0"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react"
    ],
    "testFileExtensions": [
      "es6",
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ]
  }
}
